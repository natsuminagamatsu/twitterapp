<h1><%= @current_user.name %>さんのプロフィール変更</h1>
<hr>

<%= form_for @current_user, url: profile_path do |f| %>
  <label>名前</label><br/>
  <%= f.text_field :name %><br/>

  <label>メールアドレス</label><br/>
  <%= f.text_field :email %><br/>

  <label>パスワード</label><br/>
  <%= f.password_field :password %><br/>

  <label>生年月日</label><br/>
  <%= f.date_field :birthday %><br/>

  <label>場所</label><br/>
  <%= f.text_field :place %><br/>

  <label>WEBサイト</label><br/>
  <%= f.text_field :weburl %><br/>

  <label>自己紹介</label><br/>
  <%= f.text_area :bio, size: "60x12" %><br/>

  <label>プロフィール写真</label><br/>
  <%= f.file_field :pictures %><br/>

  <% if @current_user.has_photo %>
  <img src="/uploads/<%= @current_user.id %>.jpg" width="120px"/><br/>
  <% end %>

  <%= f.submit "変更" %><br/>
<% end %>
